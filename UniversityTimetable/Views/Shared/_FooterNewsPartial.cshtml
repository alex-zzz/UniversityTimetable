@model IEnumerable<UniversityTimetable.Models.NewsViewModel>

<script>
    function ellipsify(str) {
        if (str.length > 100) {
            return (str.substring(0, 100) + "...");
        }
        else {
            return str;
        }
    }
</script>

@foreach (var item in Model)
{
    <article>
        <img src="@item.Img" alt="" class="pull-left img-responsive" />
        <h4>@item.Title</h4>
        <p>
            <script>document.write(ellipsify(`@item.Content`))</script>
        </p>
        @Html.ActionLink("More...", "GetDetailNews", "Home", new { id = item.Id }, null)
    </article>
}


