@{
    ViewBag.Title = "Home Page";
}

@section css {
    <link href="@Url.Content("~/Content/carousel.css")" rel="stylesheet" />
}

<section class="section-white">
    <div class="container-fluid">
        <div id="carousel-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-generic" data-slide-to="1"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Content/img/slaider-s1.jpg" alt="Stanford University"/>
                    <div class="carousel-caption">
                        <h2>Welcome to Stanford University</h2>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/img/slaider-s2.jpg" alt="Stanford University" />
                    <div class="carousel-caption">
                        <h2>The wind of freedom blows</h2>
                    </div>
                </div>
            </div>
            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>
</section>
<div class="container">

</div>